{
  "name": "lsp",
  "displayName": "lsp",
  "description": "lsp 语法高亮",
  "publisher": "lsp",
  "icon": "asset/lsp.jpg",
  "version": "1.0.1",
  "engines": {
    "vscode": "^1.61.0"
  },
  "keywords": [
    "lsp",
    "小程序",
    "微信",
    "wxml",
    "wxss",
    "wxs",
    "wechat",
    "wexin"
  ],
  "categories": [
    "Programming Languages"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ryouaki/wx-lsp/tree/main/packages/wx-vscode-extension"
  },
  "activationEvents": [
    "onLanguage:lsp"
  ],
  "main": "./src/index.js",
  "contributes": {
    "languages": [
      {
        "id": "lsp",
        "aliases": [
          "Lsp",
          "lsp"
        ],
        "extensions": [
          ".lsp"
        ],
        "configuration": "./languages/lsp-language-configuration.json"
      },
      {
        "id": "lsp-wxml",
        "aliases": [
          "lsp-wxml"
        ],
        "configuration": "./languages/lsp-html-language-configuration.json"
      },
      {
        "id": "lsp-postcss",
        "aliases": [
          "lsp-PostCSS",
          "lsp-POSTCSS",
          "lsp-postcss"
        ],
        "configuration": "./languages/lsp-postcss-language-configuration.json"
      },
      {
        "id": "lsp-sugarss",
        "aliases": [
          "lsp-SugarSS",
          "lsp-SUGARSS",
          "lsp-sugarss"
        ],
        "configuration": "./languages/lsp-sugarss-language-configuration.json"
      },
      {
        "id": "lsp-wxs",
        "aliases": [
          "js",
          "javascript"
        ]
      }
    ],
    "grammars": [
      {
        "language": "lsp",
        "scopeName": "source.lsp",
        "path": "./syntaxes/lsp-generated.json",
        "embeddedLanguages": {
          "text.html.basic": "wxml",
          "text.html.lsp-html": "lsp-wxml",
          "text.slim": "slim",
          "source.css": "css",
          "source.css.scss": "scss",
          "source.css.less": "less",
          "source.css.postcss": "lsp-postcss",
          "source.css.sugarss": "lsp-sugarss",
          "source.sass": "sass",
          "source.stylus": "stylus",
          "source.js": "javascript",
          "source.ts": "typescript",
          "source.json": "json"
        }
      },
      {
        "language": "lsp-postcss",
        "scopeName": "source.css.postcss",
        "path": "./syntaxes/lsp-postcss.json"
      },
      {
        "language": "lsp-sugarss",
        "scopeName": "source.css.sugarss",
        "path": "./syntaxes/lsp-sugarss.json"
      },
      {
        "language": "lsp-wxml",
        "scopeName": "text.html.wxml",
        "path": "./syntaxes/lsp-wxml.json"
      }
    ],
    "snippets": [
      {
        "language": "javascript",
        "path": "./snippets/lsp-js.json"
      },
      {
        "language": "typescript",
        "path": "./snippets/lsp-ts.json"
      },
      {
        "language": "lsp-wxs",
        "path": "./snippets/lsp-js.json"
      },
      {
        "language": "lsp-wxml",
        "path": "./snippets/lsp-wxml.json"
      },
      {
        "language": "json",
        "path": "./snippets/lsp-json.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "node ./scripts/compile.js",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "eslint": "^7.28.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-standard": "^5.0.0",
    "fast-xml-parser": "^3.19.0",
    "vscode": "^1.1.37"
  },
  "dependencies": {
    "path": "^0.12.7",
    "js-beautify": "^1.11.0",
    "vscode-languageclient": "^7.0.0"
  }
}
