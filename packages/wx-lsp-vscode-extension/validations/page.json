{
  "***": "***",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "navigationBarBackgroundColor": {
      "type": "string",
      "default": "#000000"
    },
    "navigationBarTextStyle": {
      "type": "string",
      "default": "white",
      "enum": ["black", "white"]
    },
    "navigationBarTitleText": {
      "type": "string"
    },
    "transparentTitle": {
      "type": "string",
      "default": "none"
    },
    "navigationStyle": {
      "default": "default",
      "type": "string",
      "enum": ["default", "custom"]
    },
    "backgroundColor": {
      "type": "string",
      "default": "#ffffff"
    },
    "backgroundTextStyle": {
      "type": "string",
      "default": "dark",
      "enum": ["dark", "light"]
    },
    "backgroundColorTop": {
      "type": "string",
      "default": "#ffffff"
    },
    "backgroundColorBottom": {
      "type": "string",
      "default": "#ffffff"
    },
    "enablePullDownRefresh": {
      "type": "boolean",
      "default": false,
      "enum": [true, false]
    },
    "onReachBottomDistance": {
      "type": "number",
      "default": 50
    }
  }
}